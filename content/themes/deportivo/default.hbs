<!DOCTYPE html>
<!--[if lte IE 7]><html class="ie7" xmlns:fb="http://ogp.me/ns/fb#"><![endif]-->  
<!--[if IE 8]><html class="ie8" xmlns:fb="http://ogp.me/ns/fb#"><![endif]-->  
<!--[if IE 9]><html class="ie9" xmlns:fb="http://ogp.me/ns/fb#"><![endif]-->  
<!--[if !IE]><!--><html xmlns:fb="http://ogp.me/ns/fb#"><!--<![endif]-->  
<head>
{{! Document Settings }}
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />

{{! Page Meta }}
<title>{{meta_title}}</title>
<meta name="description" content="{{meta_description}}" />

{{! Mobile Support }}
<meta name="HandheldFriendly" content="True" />
<meta name="MobileOptimized" content="320" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

{{! Styles'n'Scripts }}
<link rel="shortcut icon" href="{{asset "favicon.ico"}}">
<link rel="stylesheet" type="text/css" href="{{asset "css/animate.min.css"}}">
<link rel="stylesheet" type="text/css" href="{{asset "css/font-awesome.min.css"}}">
<link rel="stylesheet" type="text/css" href="{{asset "css/style.css"}}">
<link rel="stylesheet" type="text/css" href="{{asset "css/responsive.css"}}">
<link rel="stylesheet" type="text/css" href="{{asset "css/main-color.css"}}">
<link rel="stylesheet" type="text/css" href="{{asset "js/fancybox/jquery.fancybox.css"}}">
<link rel="stylesheet" type="text/css" href="{{asset "js/fancybox/helpers/jquery.fancybox-buttons.css"}}">
<link rel="stylesheet" type="text/css" href="{{asset "css/prettify-bootstrap.css"}}">
<!--[if lt IE 9]>
<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
{{ghost_head}}

</head>
<body class="enable_animations {{body_class}}" {{#if @blog.cover}}style="background: url({{@blog.cover}}) top center fixed;"{{/if}}>
	{{! Mobile menu. Note: The nav links are the same of #header > .main-nav, just check out assets/js/global.js }}
	<nav class="mobile nav" role="navigation"></nav>
	<div class="overlay mobile"></div>
	<!-- start: #wrapper -->
	<div id="wrapper">
	
		<!-- start: #header -->
		<header id="header" role="banner">
			<div class="center">
				{{#if @blog.logo}}
					<h1 class="logo" ><a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a></h1>
				{{else}}
					<h1 class="logo"><a href="{{@blog.url}}">{{@blog.title}}<span>.</span></a></h1>
				{{/if}}
				<!-- start: .main-nav -->
				<nav class="main-nav" role="navigation">
					<ul>
						<li><a href="{{@blog.url}}"><span>.</span>HOME</a></li>
						<li><a href="{{@blog.url}}/about"><span>.</span>ABOUT US</a></li>
						<li><a href="{{@blog.url}}/gallery"><span>.</span>GALLERY</a></li>
						<li><a href="{{@blog.url}}/contact"><span>.</span>CONTACT</a></li>
					</ul>
				</nav>
				<!-- end: .main-nav -->
				<div class="mobile selector"><i class="fa fa-bars"></i></div>
				<div class="clear"></div>
			</div>
		</header>
		<!-- end: #header -->
		
        {{{body}}}
		
		<!-- start: #footer -->
		<footer id="footer" role="contentinfo">
			<div class="center">
				<!-- start: .social -->
				<div class="social">
					<h4>Get in touch!</h4>
					<ul>
						<li><a href="{{@blog.url}}/rss" target="_blank"><i class="fa fa-rss"></i></a></li>
						<li><a href="#" target="_blank"><i class="fa fa-facebook"></i></a></li>
						<li><a href="#" target="_blank"><i class="fa fa-tumblr"></i></a></li>
						<li><a href="#" target="_blank"><i class="fa fa-flickr"></i></a></li>
						<li><a href="#" target="_blank"><i class="fa fa-twitter"></i></a></li>
						<li><a href="#" target="_blank"><i class="fa fa-dribbble"></i></a></li>
					</ul>
				</div>
				<!-- end: .social -->
				<!-- start: .copyrights -->
				<div class="copyrights">
					{{#if @blog.logo}}
						<h2 class="logo" ><a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a></h2>
					{{else}}
						<h2 class="logo"><a href="{{@blog.url}}">{{@blog.title}}<span>.</span></a></h2>
					{{/if}}
					<p>All rights reserved. {{@blog.title}} &copy; {{date format="YYYY"}}<br>Proudly published with Ghost</p>
				</div>
				<!-- end: .copyrights -->
				<div class="clear"></div>
			</div>
		</footer>
		<!-- end: #footer -->
		
    </div>
    <!-- end: #wrapper -->
	<a href="#" id="back-to-top"><i class="fa fa-arrow-up"></i></a>
    {{ghost_foot}}
	<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
	<script type="text/javascript" src="{{asset "js/jquery.parallax-1.1.3.js"}}"></script>
    <script type="text/javascript" src="{{asset "js/jquery.fitvids.js"}}"></script>
	<script type="text/javascript" src="{{asset "js/jquery.appear.js"}}"></script>
	<script type="text/javascript" src="{{asset "js/jquery.sticky.js"}}"></script>
	<script type="text/javascript" src="{{asset "js/google-code-prettify/prettify.js"}}"></script>
	<script type="text/javascript" src="{{asset "js/fancybox/jquery.fancybox.pack.js"}}"></script>
	<script type="text/javascript" src="{{asset "js/fancybox/helpers/jquery.fancybox-buttons.js"}}"></script>
    <script type="text/javascript" src="{{asset "js/global.js"}}"></script>
</body>
</html>
